<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Add a review for <%= @restaurant.name %></h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :content %>
        <%= f.input :rating %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>

    </div>
  </div>

</div>


